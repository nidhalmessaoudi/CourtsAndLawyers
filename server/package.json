{
  "name": "courtsandlawyers.ng",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "watch-server": "npx tsc --watch",
    "build-server": "npx tsc",
    "watch-dashboard": "nodemon --watch src/dashboard -e ts,tsx,css,png,jpg,jpeg,json --ignore src/dashboard/build tools/buildDashboard.js",
    "watch-static": "nodemon --watch src -e ts,js,html,css,pug tools/copyAssets.js",
    "build-static": "node tools/copyAssets.js",
    "build": "concurrently \"npm:build-server\" \"npm:build-static\"",
    "build-prod": "concurrently \"cross-env NODE_ENV=production\" \"npm:build\"",
    "start": "concurrently \"npm:watch-server\" \"npm:watch-dashboard\" \"npm:watch-static\" \"nodemon dist/server.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nidhalmessaoudi/CourtsAndLawyers.git"
  },
  "author": "Nidhal Messaoudi <contactme.nidhal@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nidhalmessaoudi/CourtsAndLawyers/issues"
  },
  "homepage": "https://github.com/nidhalmessaoudi/CourtsAndLawyers#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "connect-mongo": "^4.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-session": "^1.17.3",
    "helmet": "^6.0.1",
    "hpp": "^0.2.3",
    "mongoose": "^6.7.5",
    "pug": "^3.0.2",
    "shelljs": "^0.8.5",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.14",
    "@types/express-session": "^1.17.5",
    "@types/hpp": "^0.2.2",
    "@types/node": "^18.11.10",
    "@types/uuid": "^9.0.0",
    "cross-env": "^7.0.3",
    "typescript": "^4.9.3"
  }
}
